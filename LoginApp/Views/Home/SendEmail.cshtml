
@{
    ViewBag.Title = "SendEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Send Email</h3>
                <p class="text-subtitle text-muted">For user to send emails</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                @*<nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">DataTable</li>
                        </ol>
                    </nav>*@
            </div>
        </div>
    </div>
    <section class="section">
        <div class="row">
            <form class="card ng-pristine ng-valid ng-valid-required card-body h-100">
                <div class="form-group">
                    <label>From</label>
                    <input type="email" ng-model="email.From" class="form-control" required disabled />

                </div>

                @*#########Study it*@

                <div class="form-group">
                    <label>To</label>
                    <tags-input ng-model="To" placeholder="Add email">
                        <auto-complete source="getEmails($query)" min-length="0"></auto-complete>
                    </tags-input>


                </div>

                <div class="form-group">
                    <label>Subject</label>
                    <input type="text" ng-model="email.Subject" class="form-control" />

                </div>

                <div class="form-group">
                    <label>Body</label>
                    <div id="body">
                        <p>Hello World!</p>
                        <p>Some initial <strong>bold</strong> text</p>
                        <p><br /></p>
                    </div>
                </div>

                <div class="d-flex justify-content-end pt-0">
                    
                    <button type="submit" class="btn-send btn btn-primary" ng-click="sendEmail()">
                        <i class="fa-solid fa-paper-plane me-2"></i>
                        <span class="d-sm-inline d-none">Send</span>
                    </button>
                </div>
            </form>
        </div>
    </section>
</div>

