
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link rel="stylesheet" href="~/assets/assets/vendors/toastify/toastify.css">


<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>
<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3 ng-show="!updateUserId">Add User</h3>
            <h3 ng-show="updateUserId">Edit User</h3>
            <p class="text-subtitle text-muted">For user to check they list</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            @*<nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">DataTable</li>
                    </ol>
                </nav>*@
        </div>
    </div>
</div>

<section class="section">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">User Information</h4>
        </div>
        <form name="userForm" novalidate>
            <div class="card-body">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="basicInput">First Name</label>
                            <input type="text" class="form-control" name="FirstName" placeholder="Enter First Name" required ng-model="User.FirstName">
                            <div class="invalid-feedback d-block" ng-show="userForm.$submitted && userForm.FirstName.$error.required">
                                <i class="bx bx-radio-circle"></i>
                                First name is required.
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="basicInput">First Name Ar</label>
                            <input type="text" class="form-control" name="FirstNameAr" placeholder="Enter first name in arabic" ng-model="User.FirstNameAr" arabic>

                        </div>
                        <div class="form-group">
                            <label for="disabledInput">Phone Number</label>
                            <input type="text" class="form-control" name="PhoneNumber" placeholder="Enter phone number" ng-model="User.Phone" phone-number>
                            <div class="invalid-feedback d-block" ng-show="userForm.$submitted && userForm.PhoneNumber.$error.required">
                                <i class="bx bx-radio-circle"></i>
                                Phone Number is required.
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="helperText">Username</label>
                            <input type="text" class="form-control" name="Username" placeholder="Enter username" required ng-model="User.Username" ng-blur="isUserExists()" ng-attr-disabled="updateUserId">
                            <div class="invalid-feedback d-block" ng-show="userForm.$submitted && userForm.Username.$error.required">
                                <i class="bx bx-radio-circle"></i>
                                Username is required.
                            </div>

                            <div class="invalid-feedback d-block text-danger"
                                 ng-show="usernameExists">
                                <i class="bx bx-radio-circle"></i>
                                This username already exists.
                            </div>
                        </div>



                        <div class="form-group">
                            <label for="basicInput">Password</label>
                            <input type="text" class="form-control" name="Password" placeholder="Enter password" ng-required="!updateUserId" ng-model="User.Password">
                            <div class="invalid-feedback d-block" ng-show="userForm.$submitted && userForm.Password.$error.required">
                                <i class="bx bx-radio-circle"></i>
                                Password is required.
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="basicInput">Confirm Password</label>
                            <input type="text" class="form-control" name="confirmPassword" placeholder="Enter password" ng-required="!updateUserId" ng-model="confirmPassword">
                            <div class="invalid-feedback d-block" ng-show="confirmPassword !== User.Password && userForm.confirmPassword.$error.required">
                                <i class="bx bx-radio-circle"></i>
                                Passwords don't match.
                            </div>
                        </div>



                        <div class="d-flex align-items-center gap-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input"
                                       type="checkbox"
                                       id="isAdminSwitch"
                                       ng-model="isAdmin"
                                       ng-change="User.Type = isAdmin ? 'Admin' : 'User'">
                                <label class="form-check-label" for="isAdminSwitch">Admin</label>
                            </div>

                            <div class="form-check form-switch" ng-show="updateUserId">
                                <input class="form-check-input"
                                       type="checkbox"
                                       id="isActiveSwitch"
                                       ng-model="User.IsActive">
                                <label class="form-check-label" for="isActiveSwitch">Active</label>
                            </div>

                            <div class="form-check form-switch" ng-show="updateUserId">
                                <input class="form-check-input"
                                       type="checkbox"
                                       id="isLockedSwitch"
                                       ng-model="User.IsLocked">
                                <label class="form-check-label" for="isLockedSwitch">Locked</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">

                        <div class="form-group">
                            <label for="basicInput">Last Name</label>
                            <input type="text" class="form-control" name="LastName" placeholder="Enter First Name" required ng-model="User.LastName">
                            <div class="invalid-feedback d-block" ng-show="userForm.$submitted && userForm.LastName.$error.required">
                                <i class="bx bx-radio-circle"></i>
                                Last name is required.
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="basicInput">Last Name Ar</label>
                            <input type="text" class="form-control" name="LastNameAr" placeholder="Enter last name in arabic" ng-model="User.LastNameAr" arabic>
                        </div>


                        <div class="form-group">
                            <label for="disabledInput">Email</label>
                            <input type="text" class="form-control" name="Email" placeholder="Enter email" required ng-model="User.Email">
                            <div class="invalid-feedback d-block" ng-show="userForm.$submitted && userForm.Email.$error.required">
                                <i class="bx bx-radio-circle"></i>
                                Email is required.
                            </div>
                        </div>

                        <div class="form-group" ng-show="updateUserId">
                            <label>Status</label>
                            <div class="d-flex w-25 justify-content-between">
                                <div class="badge" ng-class="{
                                 'bg-warning': User.Status == 'pending',
                                 'bg-success': User.Status == 'approved',
                                 'bg-danger': User.Status == 'rejected'
                                 }">{{User.Status}}</div>
                                <div class="d-flex">
                                    <p class="d-inline m-0 link-success" style="cursor:pointer; text-decoration:underline;" ng-click="confirmApprove()" ng-show="User.Status == 'pending' || User.Status == 'rejected'">Approve</p>
                                    <p class="d-inline m-0 link-danger" style="cursor: pointer; text-decoration: underline;" ng-click="confirmReject()" ng-show="User.Status == 'pending' || User.Status == 'approved'">Reject</p>
                                </div>
                               
                            </div>


                        </div>
                        <div class="form-group" ng-show="updateUserId || User.Status == 'pending'">
                            <label ng-show="User.Status == 'approved'">Approved By</label>
                            <label ng-show="User.Status == 'rejected'">Rejected By</label>
                            <p class="form-control-static m-0">{{User.approvedBy}}</p>
                        </div>



                    </div>

                </div>

                <div class="row">
                    <div class="col-sm-12 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary me-1 mb-1 " ng-click="saveUser()"><span ng-show="!updateUserId">Create User</span><span ng-show="updateUserId">Update User</span></button>
                        @*<button type="reset" class="btn btn-light-secondary me-1 mb-1" ng-click="reset()">Reset</button>*@
                    </div>

                </div>
            </div>
        </form>
    </div>
</section>







